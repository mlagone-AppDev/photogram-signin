<h1>Sign in</h1>

<form action="/verify_credentials" method="post">
  <div>
    <label>Username</label>
    <input type="text" name="input_username">
  </div>
  
  <div>
    <label>Password</label>
    <input type="password" name="input_password">
  </div>

  <div>
    <label>Password Confirmation</label>
    <input type="password" name="input_password_confirm">
  </div>

  <div>
    <label>Private</label>
    <input type="checkbox" name="input_private">
  </div>
  
  <button>
    Sign in
  </button>
</form>